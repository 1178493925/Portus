li
  .activity-type.change-namespace-visibility
    i.fa.fa-unlock
  .user-image
    = user_image_tag(activity.owner.email)
  .description
    h6
      strong
        = "#{activity.owner.username} set the "
      = link_to activity.trackable.name, activity.trackable
      = " namespace as public"
    small
      i.fa.fa-clock-o
      = time_ago_in_words(activity.created_at)
