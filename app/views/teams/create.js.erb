var el = $('#new-team-user-form');

<% if @team.errors.any? %>
  $('#alert p').html("<%= escape_javascript(@team.errors.full_messages.join('<br/>')) %>");
  $('#alert').fadeIn();
<% else %>
  $("<%= escape_javascript(render @team) %>").appendTo("#teams");
  $('#notice p').html("The team '<%= @team.name %>' was created successfully");
  $('#notice').fadeIn();
  $('#add_team_form').fadeOut();
  $('#add_team_btn i').addClass("fa-chevron-down")
  $('#add_team_btn i').removeClass("fa-chevron-up")
<% end %>

